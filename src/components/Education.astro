---
const education = [
  {
    degree: "Ingeniería de Ejecución en Computación e Informática",
    institution: "Universidad del Bío-Bío, Sede Concepción",
    period: "2020 - 2025"
  }
];
---

<section id="education" class="py-20 bg-gray-100 dark:bg-gray-800">
  <div class="container mx-auto px-4 md:px-6">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
      <span class="text-emerald-600 dark:text-emerald-400">&lt;</span>
      <span class="text-gray-800 dark:text-gray-100">Formación</span>
      <span class="text-emerald-600 dark:text-emerald-400">/&gt;</span>
    </h2>
    
    <div class="max-w-3xl mx-auto space-y-8">
      {education.map((item) => (
        <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
          <div class="flex flex-col md:flex-row md:items-start gap-4">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center w-16 h-16 rounded-full bg-emerald-100 dark:bg-emerald-900/40 text-emerald-600 dark:text-emerald-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path d="M12 14l9-5-9-5-9 5 9 5z" />
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                </svg>
              </div>
            </div>
            
            <div class="flex-grow">
              <div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
                <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">{item.degree}</h3>
                <div class="text-sm font-medium bg-emerald-100 dark:bg-emerald-900/40 text-emerald-800 dark:text-emerald-300 py-1 px-3 rounded-full mt-2 md:mt-0 inline-block whitespace-nowrap">
                  {item.period}
                </div>
              </div>
              
              <h4 class="text-lg font-semibold text-emerald-600 dark:text-emerald-400 mb-3">{item.institution}</h4>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 